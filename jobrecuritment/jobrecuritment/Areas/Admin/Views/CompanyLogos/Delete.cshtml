@model jobrecuritment.Models.CompanyLogo

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Company & Logo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Company Name
        </dt>
        <dd class = "col-sm-10">
            Logo
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LogoImage)
        </dt>
        <dd class = "col-sm-10">
            <img src="~/assets/images/logo/@Html.DisplayFor(model => model.LogoImage)" alt="Alternate Text" width="120" class="rounded" />
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a class="btn btn-light" asp-action="Index">Back to List</a>
    </form>
</div>
