@{ 
    Layout = null;
}

@model EditPersonalInfoViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
    <link rel="shortcut icon" href="~/assets/images/favicon1.webp" type="image/x-icon">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;600;900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <link rel="stylesheet" href="~/assets/css/style.css">
    <link rel="stylesheet" href="~/assets/css/registeration.css">
    <title>Personal Informatoin</title>
</head>
<body>
    <section id="register-title">
        <div class="row">
            <div class="col-xl-3 col-lg-4  col-md-6 col-sm-12">
                <partial name="_EditLinksPartialView" />
            </div>
            <div class="col-xl-9 col-lg-8 col-md-6 col-sm-12  pt-5 right">
                <h4 class="px-4">Personal Information</h4>
                <div class="personal-inf m-2 p-2 px-4  mt-lg-3">
                    <form method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="mb-3 ">
                            <label for="exampleInputSurname1" class="form-label">Surname</label>
                            <input type="text" placeholder="Name" name="Name" value="@Model.PersonalInfo.Name" class="form-control p-3" id="exampleInputSurname1" aria-describedby="surnameHelp">
                        </div>
                        <div class="mb-3 ">
                            <label for="exampleInputSurname1" class="form-label">Surname</label>
                            <input type="text" placeholder="Surname" name="Surname" value="@Model.PersonalInfo.Surname" class="form-control p-3" id="exampleInputSurname1" aria-describedby="surnameHelp">
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputSurname1" class="form-label">Father Name</label>
                            <input type="text" placeholder="Father Name" name="FatherName" value="@Model.PersonalInfo.FatherName" class="form-control p-3" id="exampleInputSurname1" aria-describedby="surnameHelp">
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label">Date</label>
                            <input type="text" class="form-control p-3" asp-for="@Model.PersonalInfo.DateOfBiirth" name="DateOfBiirth" value="@Model.PersonalInfo.DateOfBiirth.ToString("dd/mm/yyyy")" id="exampleInputEmail1" placeholder="Date of Birth" aria-describedby="datelHelp">
                        </div>
                        <div class="mb-3">
                            <h5 class="pt-4 pb-3 gender">Gender</h5>
                            <input type="radio" name="gender" value="Male" asp-for="@Model.PersonalInfo.Gender" aria-describedby="maleHelp">
                            <label for="male" class="form-label male">Male</label>
                            <span class="female">
                                <input type="radio" value="Female" asp-for="@Model.PersonalInfo.Gender" name="gender" aria-describedby="femalelHelp">
                                <label for="female" class="form-label">Female</label>
                            </span>
                        </div>
                        <div class="mb-3 ">
                            <h5>Adress</h5>
                            <input type="text" placeholder="Name" name="Adress" value="@Model.PersonalInfo.Adress" class="form-control p-3" id="exampleInputAdress" aria-describedby="adressHelp">
                        </div>
                        <div class="mb-3 pt-3">
                            <input type="checkbox" class="p-3 register-checkbox">
                            <label for="adrees" class="form-label text "> My residential address and my registered address are different</label>
                        </div>
                        <div class="mb-3 pt-3">
                            <label for="adrees" class="form-label ">Registered address</label>
                            <input type="text" class="form-control  p-3" name="RegistrAdress" asp-for="@Model.PersonalInfo.RegistrAdress" value="@Model.PersonalInfo.RegistrAdress" id="adress" aria-describedby="adressHelp">
                        </div>
                        <div class="mb-3 pt-3">
                            <label for="adrees" class="form-label ">Click for download Picture</label>
                            <p class="upload-info">The file you upload must be in JPG, PNG format, and must not exceed 3 mb</p>
                            <a class="add">
                                <span><i class="bi bi-plus"></i>Add</span>
                                <input type="file" class="form-control p-3 for-image add-image-input" name="ProfilImg" asp-for="@Model.PersonalInfo.ProfilImg" id="add-image-input" accept="image/*">
                            </a>
                            <div>
                                <img src="~/assets/images/user/@Model.PersonalInfo.ProfilImage" width="100" class="m-2" alt="profil image" />
                            </div>
                        </div>
                        <div class="form-group form-button">
                            <input type="submit" name="signup" id="signup" class="form-submit btn btn-light" value="Register" />
                        </div>
                        <input type="hidden" asp-for="@Model.PersonalInfo.UserId" name="UserId" />
                        <input type="hidden" asp-for="@Model.PersonalInfo.Id" name="Id"/>
                        <input type="hidden" asp-for="@Model.PersonalInfo.ProfilImage"  name="ProfilImage"/>
                        <input type="hidden" asp-for="@Model.PersonalInfo.RegistrationTime" name="RegistrationTime" value="@Model.PersonalInfo.RegistrationTime"/>
                        @*<button type="submit" class="btn btn-light next">Next</button>*@
                    </form>

                </div>
                <div class="buttons">
                    <a href="/Profil/InfoAppeal" class="btn btn-light next">Back to Home</a>
                </div>
            </div>
        </div>
    </section>







    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
    <script src="~/assets/js/main.js"></script>

</body>
</html>